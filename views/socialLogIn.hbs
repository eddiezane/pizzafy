<div class="login-form">
<div class="social-buttons">
<a href="/auth/twitter" class="btn btn-block btn-lg btn-info social-btn btn-twitter">Sign in with Twitter</a>
<a href="/auth/facebook" class="btn btn-block btn-lg btn-primary social-btn btn-facebook">Sign in with Facebook</a>
</div>

<div class="login-container">
            <div class="form-group">
              <input type="text" class="form-control login-field" value="" placeholder="Enter your name" id="login-name" />
              <label class="login-field-icon fui-user" for="login-name"></label>
            </div>

            <div class="form-group">
              <input type="password" class="form-control login-field" value="" placeholder="Password" id="login-pass" />
              <label class="login-field-icon fui-lock" for="login-pass"></label>
            </div>

             <button type="submit" id="submit" name="submit" class="btn btn-block btn-lg btn-inverse">Sign in</button>
</div>
</div>

