{{#if messages.errors}}
<div class="alert alert-danger fade in">
  <button class="close" type="button" data-dismiss='alert'>
    <span class="ion-close-circled">
      x
    </span>
  </button>
  {{#each messages.errors}}
    {{this.msg}}
  {{/each}}
</div>
{{/if}}


